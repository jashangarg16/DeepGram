<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Healthcare Multilingual Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Healthcare Multilingual Assistant</h1>
    
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h5>Patient Input</h5>
            <div class="form-group">
              <label for="sourceLanguage">Source Language:</label>
              <select id="sourceLanguage" class="form-control">
                <!-- Will be populated from API -->
              </select>
            </div>
          </div>
          <div class="card-body">
            <div id="recordingControls">
              <button id="startRecord" class="btn btn-primary">Start Recording</button>
              <button id="stopRecord" class="btn btn-danger" disabled>Stop Recording</button>
              
              <div class="mt-3">
                <label for="audioFile" class="form-label">Or upload audio file:</label>
                <input class="form-control" type="file" id="audioFile" accept="audio/*">
              </div>
            </div>
            
            <div class="mt-4">
              <h6>Original Speech:</h6>
              <div id="originalText" class="p-3 border rounded bg-light"></div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h5>Provider View</h5>
            <div class="form-group">
              <label for="targetLanguage">Target Language:</label>
              <select id="targetLanguage" class="form-control">
                <!-- Will be populated from API -->
              </select>
            </div>
          </div>
          <div class="card-body">
            <div class="mt-2">
              <h6>Translated Text:</h6>
              <div id="translatedText" class="p-3 border rounded bg-light"></div>
            </div>
            
            <div class="mt-4">
              <h6>Provider Response:</h6>
              <textarea id="responseText" class="form-control" rows="3" placeholder="Type your response here..."></textarea>
              <button id="translateResponse" class="btn btn-success mt-2">Translate Response</button>
            </div>
            
            <div class="mt-3">
              <h6>Translated Response:</h6>
              <div id="translatedResponse" class="p-3 border rounded bg-light"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5>Conversation History</h5>
          </div>
          <div class="card-body">
            <div id="conversationHistory" class="p-2"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/recorder.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>